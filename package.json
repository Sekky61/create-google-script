{
    "name": "google-script-template",
    "description": "Google Apps Script template",
    "module": "index.ts",
    "type": "module",
    "scripts": {
        "check": "biome check --fix",
        "check:unsafe": "biome check --fix --unsafe",
        "format": "biome format --write",
        "lint": "biome lint --write",
        "lint:unsafe": "biome lint --write --unsafe",

        "create": "clasp create",
        "login": "clasp login",
        "help": "clasp create --help",
        "clone": "clasp clone",
        "push": "clasp push",
        "watch": "clasp push --watch",
        "pull": "clasp pull",
        "open": "clasp open",
        "deploy": "bun deploy.ts",
        "bundle": "bun bundle.ts"
    },
    "license": "MIT",
    "devDependencies": {
        "@biomejs/biome": "1.9.4",
        "@google/clasp": "^2.4.2",
        "@types/bun": "latest",
        "@types/google-apps-script": "^1.0.86",
        "@types/lodash": "^4.17.13"
    },
    "peerDependencies": {
        "typescript": "^5.0.0"
    },
    "dependencies": {
        "lodash": "^4.17.21"
    }
}
